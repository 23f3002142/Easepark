<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard - Parking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>

<body>
    {% include 'user_navbar.html' %}

    <div class="container mt-5">

        <h3 class="mb-4 text-primary text-center">
            Booking Summary for {{ user.full_name or user.username }}
        </h3>

        <!-- Summary Section -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="border rounded p-3 text-center bg-light">
                    <h6>Total Amount Paid</h6>
                    <p class="fw-bold text-success">₹{{ total_amount_paid }}</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="border rounded p-3 text-center bg-light">
                    <h6>Total Duration Parked</h6>
                    <p class="fw-bold">{{ total_duration_hours }} hours</p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="border rounded p-3 text-center bg-light">
                    <h6>Total Bookings</h6>
                    <p class="fw-bold">{{ total_bookings }}</p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="border rounded p-3 text-center bg-light">
                    <h6>First Booking</h6>
                    <p class="fw-bold">
                        {% if first_booking %}
                        {{ first_booking.strftime('%d %b %Y') }}
                        {% else %}
                        —
                        {% endif %}
                    </p>
                </div>
            </div>
            <div class="col-md-2">
                <div class="border rounded p-3 text-center bg-light">
                    <h6>Latest Booking</h6>
                    <p class="fw-bold">
                        {% if latest_booking %}
                        {{ latest_booking.strftime('%d %b %Y') }}
                        {% else %}
                        —
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>

        <!-- Booking Table -->
        {% if history %}
        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Spot Number</th>
                        <th>Lot Name</th>
                        <th>Vehicle number</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Cost</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {% for res in history %}
                    <tr>
                        <td>{{ res.spot.spot_number }}</td>
                        <td>{{ res.spot.lot.parking_name }}</td>
                        <td>{{ res.vehicle_number or 'N/A' }}</td>
                        <td>{{ res.booking_timestamp_ist.strftime('%d %b %Y, %I:%M %p') }}</td>
                        <td>
                            {% if res.releasing_timestamp_ist %}
                            {{ res.releasing_timestamp_ist.strftime('%d %b %Y, %I:%M %p') }}
                            {% else %}
                            —
                            {% endif %}
                        </td>
                        <td>₹{{ res.total_cost or '—' }}</td>
                        <td class="text-capitalize">{{ res.status }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <p class="text-muted text-center">This user has no bookings yet.</p>
        {% endif %}

    </div>

    <div class="container mt-5">
        <h2 class="text-center fw-bold mb-2">User Statistics </h2>
        <p class="text-center text-muted mb-4">Insight into your parking history, time usage, and spending behavior</p>

        <div class="row">
            <!-- Left Column (Donut Chart) -->
            <div class="col-md-6 mb-4">
                <div class="card shadow rounded p-3">
                    <h5 class="text-center">Parking Duration Distribution</h5>
                    <canvas id="parkingDurationChart" height="300"></canvas>
                </div>
            </div>

            <!-- Right Column (2 stacked charts) -->
            <div class="col-md-6">
                <div class="card shadow rounded p-3 mb-4">
                    <h5 class="text-center">Total Spent vs Time Parked</h5>
                    <canvas id="spentTimeChart" height="210"></canvas>
                </div>

                <div class="card shadow rounded p-3">
                    <h5 class="text-center mb-4">Booking History Timeline</h5>
                    <canvas id="bookingHistoryChart" height="210"></canvas>
                </div>
            </div>
        </div>
    </div>




    


    <!-- Chart 1 -->
    <script>
        const ctx = document.getElementById('bookingHistoryChart').getContext('2d');
        const bookingHistoryChart = new Chart(ctx, {
            type: 'bar', // or 'line'
            data: {
                labels: {{ chart_labels| tojson }},
        datasets: [{
            label: 'Bookings',
            data: {{ chart_data| tojson }},
            backgroundColor: 'rgba(54, 162, 235, 0.6)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
            }]
        },
        options: {
            responsive: true,
                scales: {
                y: {
                    beginAtZero: true,
                        stepSize: 1
                }
            }
        }
    });
    </script>


    <!-- Chart 2 -->
    

    <script>
        const ctxDuration = document.getElementById('parkingDurationChart').getContext('2d');
        const parkingDurationChart = new Chart(ctxDuration, {
            type: 'doughnut',
            data: {
                labels: {{ chart_duration_labels| tojson }},
        datasets: [{
            label: 'Duration Count',
            data: {{ chart_duration_data| tojson }},
            backgroundColor: [
            '#4e79a7', // <3 hrs
            '#f28e2c', // 3–6 hrs
            '#e15759', // 6–9 hrs
            '#76b7b2', // 9–12 hrs
            '#59a14f', // 12+ hrs
            '#edc948', // 1 day+
            '#b07aa1'  // >2 days
        ],
            borderColor: '#fff',
            borderWidth: 1
            }]
        },
        options: {
            responsive: true,
                plugins: {
                legend: {
                    position: 'top'
                }
            }
        }
    });
    </script>

    <!-- chart3 -->
    

    <script>
        const ctxSpent = document.getElementById('spentTimeChart').getContext('2d');
        const spentTimeChart = new Chart(ctxSpent, {
            type: 'bar',
            data: {
                labels: {{ chart_booking_labels | tojson }},
        datasets: [
            {
                type: 'bar',
                label: 'Time Parked (hrs)',
                data: {{ chart_duration_data_each | tojson }},
            yAxisID: 'y',
            backgroundColor: 'rgba(54, 162, 235, 0.6)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
                },
            {
                type: 'line',
                label: 'Total Cost (₹)',
                data: {{ chart_cost_data_each | tojson }},
            yAxisID: 'y1',
            borderColor: 'rgba(255, 99, 132, 1)',
            backgroundColor: 'rgba(255, 99, 132, 0.2)',
            tension: 0.4,
            fill: false
                }
        ]
        },
        options: {
            responsive: true,
                interaction: {
                mode: 'index',
                    intersect: false
            },
            stacked: false,
                scales: {
                y: {
                    type: 'linear',
                        position: 'left',
                            title: {
                        display: true,
                            text: 'Hours Parked'
                    }
                },
                y1: {
                    type: 'linear',
                        position: 'right',
                            grid: {
                        drawOnChartArea: false
                    },
                    title: {
                        display: true,
                            text: 'Cost (₹)'
                    }
                }
            }
        }
    });
    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>